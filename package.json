{
  "name": "nest-api",
  "version": "0.0.1",
  "description": "RestApi For Bookmark using Postgresql with nest-js",
  "author": "Vuyyuru Raja Shekar Reddy",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "dotenv -e .env -- nest build",
    "build:prod": "dotenv -e .env.prod -- nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -e .env -- nest start",
    "start:dev": "dotenv -e .env -- nest start --watch",
    "start:debug": "dotenv -e .env -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:migrate:dev": "dotenv -e .env --npx prisma migrate dev",
    "prisma:migrate:dev:deploy": "dotenv -e .env.test -- npx prisma migrate deploy",
    "prisma:dev:studio": "dotenv -e .env.test -- npx prisma studio",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker compose up dev-db -d",
    "db:dev:restart": "yarn db:dev:rm  && yarn db:dev:up && delay 2 && yarn prisma:migrate:dev:deploy",
    "prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
    "prisma:migrate:test:deploy": " dotenv -e .env.test -- npx prisma migrate deploy",
    "prisma:test:studio": " dotenv -e .env.test -- npx prisma studio",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:up": "docker compose up test-db -d",
    "db:test:restart": "yarn db:test:rm  && yarn db:test:up && delay 2 && yarn prisma:migrate:test:deploy",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "yarn db:test:restart",
    "test:e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.6",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.1.6",
    "argon2": "0.30.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "http-status": "^1.5.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.6",
    "@prisma/client": "^4.5.0",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.0",
    "@types/node": "^18.11.5",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "delay-cli": "^2.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.2.2",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
